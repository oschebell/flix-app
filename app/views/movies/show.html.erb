<article>
    <header>
      <h2><%= @movie.title %></h2>
    </header>
    <h3>Cast:</h3>
        <p><%= @movie.cast %></p>
      <h3>Director:</h3>
        <p><%= @movie.director %></p>
      <h3>Duration:</h3>
        <p><%= @movie.duration %></p>
     
        <h3>Image:</h3>
        <%= image_for(@movie) %>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= @movie.released_on %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= @movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= @movie.total_gross %></td>
      </tr>
      
      </tr>
    </table>
  </article>
<end >

<br>
