<div class="row">
  <div class="col-lg-6">
    <h1><%= pluralize(@movies.size, 'Movie') %></h1>
    <%= link_to "Add New Movie", new_movie_path %>
    <% @movies.each do |movie| %>
      <article>
        <header>
        <h2><%= link_to(movie.title, movie) %></h2>
        <div class="row">
          <div class="col-lg-2">
            <%= image_for(movie) %>
          </div>
          <div class="col-lg-8 col-lg-offset-1">
            <h3><%=movie.cast %></h3>
             <p>
              <%=movie.description %>
            </p>
          </div>
        </div>
        </header>
        <table>
          <tr>
            <th>Released:</th>
            <td><%= movie.released_on %></td>
          </tr>
          <tr>
            <th>Rating:</th>
            <td><%= movie.rating %></td>
          </tr>
          <tr>
            <th>Duration:</th>
            <td><%= movie.duration %></td>
          </tr>
          <tr>
            <th>Total Gross:</th>
            <td><%= movie.total_gross %></td>
          </tr>
        </table>
      </article>
    <% end %>
  </div>
</div>